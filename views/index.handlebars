<div class="row">
  <div class='col col-xl-3, col-lg-3, col-md-3, col-sm-3, col-3'></div>
  <h1 class='col col-xl-6, col-lg-6, col-md-6, col-sm-6, col-6'>It's Burger Time!</h1>
  <div class='col col-xl-3, col-lg-3, col-md-3, col-sm-3, col-3'></div>
</div>
<div class="row">
  <div class=" col col-xl-6, col-lg-6, col-md-6, col-sm-6">
    <h2>Burgers to Devour!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>
  <div class=" col col-xl-6, col-lg-6, col-md-6, col-sm-6">
    <h2>Devoured Burgers!</h2>

    <ol>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
      </ul>
  </div>
</div>
<div class="row">
  <div class="col col-2"></div>
  <div class="col col-8">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="newBurger">Burger Name:</label>
        <input type="text" id="newBurger" name="name">
      </div>
      <button type="button" class="btn btn-light"type="submit">Add Burger</button>

  </div>

  <div class="col col-2"></div>


  </form>
</div>